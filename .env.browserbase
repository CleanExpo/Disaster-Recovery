# Browserbase MCP Configuration
# Get your API key from https://browserbase.com

# Browserbase API Configuration
BROWSERBASE_API_KEY=your_api_key_here
BROWSERBASE_PROJECT_ID=your_project_id_here
BROWSERBASE_ENDPOINT=wss://browserbase.com/connect

# Stagehand Configuration
STAGEHAND_MODEL=gpt-4-vision-preview
STAGEHAND_ENABLE_DEBUG=true

# Browser Settings
BROWSER_HEADLESS=false
BROWSER_DEFAULT_TIMEOUT=30000
BROWSER_VIEWPORT_WIDTH=1280
BROWSER_VIEWPORT_HEIGHT=720

# Recording Settings
BROWSER_RECORD_VIDEO=true
BROWSER_RECORD_HAR=true
BROWSER_SCREENSHOTS=true

# Session Settings
BROWSER_SESSION_TIMEOUT=300000
BROWSER_MAX_SESSIONS=5
BROWSER_BLOCK_ADS=true

# Test Output Directories
TEST_RESULTS_DIR=./test-results
TEST_VIDEOS_DIR=./test-results/videos
TEST_HAR_DIR=./test-results/har
TEST_SCREENSHOTS_DIR=./test-results/screenshots