{
  "name": "nrp-bot-system",
  "version": "1.0.0",
  "description": "NRP Dual Bot System - Client and Contractor Bots with ElysiaJS",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "client-bot": "tsx cli/client-bot/index.ts",
    "contractor-bot": "tsx cli/contractor-bot/index.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"cli/**/*.ts\"",
    "docker:build": "docker-compose -f docker-compose.yml build",
    "docker:up": "docker-compose -f docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker-compose.yml down",
    "docker:logs": "docker-compose -f docker-compose.yml logs -f"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.0",
    "@elysiajs/jwt": "^1.3.0",
    "@elysiajs/static": "^1.3.0",
    "@elysiajs/swagger": "^1.3.0",
    "@langchain/community": "^0.3.54",
    "@langchain/core": "^0.3.73",
    "@langchain/openai": "^0.6.11",
    "@prisma/client": "^5.22.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "bull": "^4.12.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "elysia": "^1.3.21",
    "express": "^4.21.2",
    "inquirer": "^8.2.6",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.32",
    "openai": "^4.104.0",
    "ora": "^5.4.1",
    "twilio": "^4.19.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "bot",
    "elysiajs",
    "disaster-recovery",
    "contractor",
    "emergency-response"
  ],
  "author": "NRP",
  "license": "PROPRIETARY"
}
