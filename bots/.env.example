# Bot System Environment Variables
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development

# Server Ports
PORT=3001
WS_PORT=3002

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nrp_bots

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-secret-key-change-in-production

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# OpenAI API (for bot intelligence)
OPENAI_API_KEY=

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# RabbitMQ (optional, if using instead of Bull)
RABBITMQ_URL=amqp://localhost

# Monitoring
SENTRY_DSN=
GRAFANA_API_KEY=

# Email Service (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@nrp.com.au

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Bot Configuration
BOT_RESPONSE_TIMEOUT=30000
BOT_MAX_RETRIES=3
BOT_EMERGENCY_PRIORITY=true

# Compliance
COMPLIANCE_MODE=strict
AUDIT_ENABLED=true
DATA_RETENTION_DAYS=90