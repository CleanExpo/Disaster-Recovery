{
  "name": "nrp-audio-system",
  "version": "1.0.0",
  "description": "Multi-language audio system for NRP Disaster Recovery Platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "dev:node": "tsx watch src/index-node.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "docker:build": "docker-compose -f docker-compose.audio.yml build",
    "docker:up": "docker-compose -f docker-compose.audio.yml up -d",
    "docker:down": "docker-compose -f docker-compose.audio.yml down",
    "cache:pregenerate": "tsx scripts/pregenerate-cache.ts",
    "voice:clone": "tsx scripts/clone-voice.ts"
  },
  "dependencies": {
    "elysia": "^1.0.0",
    "@elysiajs/cors": "^1.0.0",
    "@elysiajs/swagger": "^1.0.0",
    "@elysiajs/websocket": "^1.0.0",
    "elevenlabs": "^0.16.0",
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "redis": "^4.6.12",
    "ioredis": "^5.3.2",
    "bullmq": "^5.1.0",
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/client-polly": "^3.478.0",
    "uuid": "^9.0.1",
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "crypto-js": "^4.2.0",
    "langdetect": "^0.2.1",
    "franc": "^6.2.0",
    "langs": "^2.0.0",
    "ssml-builder": "^0.4.3",
    "node-cache": "^5.1.2",
    "p-queue": "^8.0.1",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "@types/express": "^4.17.21",
    "@types/crypto-js": "^4.2.1",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}