# ========================================
# NRP Disaster Recovery Platform
# Environment Configuration Template
# ========================================

# ⚠️ CRITICAL: DO NOT MODIFY THESE DOMAINS WITHOUT APPROVAL
# Production: https://disaster-recovery-seven.vercel.app
# Staging: https://disaster-recovery-staging.vercel.app
# NEVER use disasterrecovery.com.au in environment variables

# Required Environment Variables
NEXTAUTH_SECRET=your-secret-key-here-minimum-32-chars
NEXT_PUBLIC_APP_URL=https://disaster-recovery-seven.vercel.app
NEXTAUTH_URL=https://disaster-recovery-seven.vercel.app

# Database Configuration
DATABASE_URL="file:./dev.db"  # SQLite for development
# DATABASE_URL="postgresql://user:password@localhost:5432/nrp_db"  # PostgreSQL for production

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=http://localhost:3001
WEBSOCKET_PORT=3002

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Service
EMAIL_FROM=noreply@disaster-recovery.com
SENDGRID_API_KEY=
RESEND_API_KEY=

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_MESSAGING_SERVICE_SID=

# AI Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENROUTER_API_KEY=your_openrouter_key_here

# Voice/Audio Services (ElevenLabs)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# Storage (AWS S3 / Cloudinary)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-2
AWS_S3_BUCKET=nrp-disaster-recovery

CLOUDINARY_URL=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Maps and Geolocation
GOOGLE_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=

# Clean Claims API Integration
CLEAN_CLAIMS_API_URL=https://api.cleanclaims.com/v1
CLEAN_CLAIMS_API_KEY=
CLEAN_CLAIMS_WEBHOOK_SECRET=

# Background Check Service
BACKGROUND_CHECK_API_URL=https://api.backgroundcheck.com/v1
BACKGROUND_CHECK_API_KEY=
BACKGROUND_CHECK_WEBHOOK_URL=https://disaster-recovery-seven.vercel.app/api/webhooks/background-check

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# Monitoring and Error Tracking
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=nrp-disaster-recovery

# HRM (Hierarchical Reasoning Model) Configuration
HRM_MODEL_PATH=
HRM_API_ENDPOINT=http://localhost:8080/hrm
HRM_API_KEY=
HRM_MAX_CYCLES=16
HRM_HALT_MAX_STEPS=16
HRM_TEMPERATURE=0.1
HRM_DEVICE=cuda

# Orchestration Settings
ORCHESTRATION_DEFAULT_APPROACH=hrm
ORCHESTRATION_MAX_RETRIES=3
ORCHESTRATION_ENABLE_CACHING=true
ORCHESTRATION_ENABLE_MONITORING=true
ORCHESTRATION_ENABLE_HRM=true

# Performance Settings
CACHE_MAX_SIZE=100000000
CACHE_TTL=3600
MONITORING_RETENTION_DAYS=7

# Feature Flags
ENABLE_AUDIO=true
ENABLE_WEBSOCKET=true
ENABLE_NOTIFICATIONS=true
ENABLE_CHAT=true
ENABLE_2FA=false
ENABLE_API_RATE_LIMITING=true
ENABLE_BACKGROUND_CHECKS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_COOKIE_NAME=nrp-session
SESSION_COOKIE_MAX_AGE=86400

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://disaster-recovery-seven.vercel.app,https://disaster-recovery-staging.vercel.app

# Node Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Bot System Specific
BOT_API_PORT=3001
BOT_WS_PORT=3002
BOT_HEALTH_CHECK_INTERVAL=30000

# Security
JWT_SECRET=
JWT_REFRESH_SECRET=

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System maintenance in progress. Please check back soon."

# IMPORTANT: When setting up environment variables in Vercel:
# 1. Go to Settings > Environment Variables
# 2. Set NEXT_PUBLIC_APP_URL to https://disaster-recovery-seven.vercel.app for Production
# 3. Set NEXTAUTH_URL to https://disaster-recovery-seven.vercel.app for Production
# 4. For Staging, use disaster-recovery-staging.vercel.app domain
# 5. NEVER reference disasterrecovery.com.au in env variables
