# ================================================
# ENVIRONMENT VARIABLES TEMPLATE
# ================================================
# Copy this file to .env and fill in the actual values
# DO NOT commit .env with real values to version control
# All production secrets should be stored in Vercel Environment Variables
# ================================================

# Database
DATABASE_URL="file:./dev.db"  # SQLite for local development

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_a_secure_random_string

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email Configuration
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email@gmail.com
EMAIL_SERVER_PASSWORD=your_email_app_password
EMAIL_FROM=noreply@yourdomain.com

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Disaster Recovery Australia"
NEXT_PUBLIC_SITE_URL="https://disasterrecovery.com.au"

# Analytics Services
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_FB_PIXEL_ID=XXXXXXXXXXXXXXX
NEXT_PUBLIC_CLARITY_ID=xxxxxxxxxx

# SEMrush API
SEMRUSH_API_KEY=your_semrush_api_key
SEMRUSH_API_UNITS_LIMIT=10000
SEMRUSH_DATABASE=au

# Microsoft/Bing Webmaster
BING_WEBMASTER_ID=your_bing_webmaster_id

# Lead Management Pricing
LEAD_PRICE=550
LEAD_PRICE_PREMIUM=750
LEAD_PRICE_REGIONAL=450

# Service Settings
MINIMUM_CALLOUT_FEE=2200
AFTER_HOURS_SURCHARGE=500
WEEKEND_SURCHARGE=750
PUBLIC_HOLIDAY_SURCHARGE=1000

# Encryption
ENCRYPTION_KEY=generate_32_character_encryption_key

# Clean Claims API
CLEAN_CLAIMS_API_URL=https://api.cleanclaims.com.au/v1
CLEAN_CLAIMS_API_KEY=your_clean_claims_api_key
CLEAN_CLAIMS_WEBHOOK_SECRET=your_webhook_secret

# Contractor Settings
CONTRACTOR_ONBOARDING_FEE=1500
CONTRACTOR_BOND_AMOUNT=5000
CONTRACTOR_SUBSCRIPTION_BASE=750

# Background Check Provider
BACKGROUND_CHECK_PROVIDER="Australian Police Check"
BACKGROUND_CHECK_API_KEY=your_background_check_api_key

# ABN Lookup API
ABN_LOOKUP_GUID=your_abn_lookup_guid

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# SMS Provider (Twilio)
SMS_PROVIDER=Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+61XXXXXXXXX
