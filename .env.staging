# Staging Environment Configuration
# Copy this to .env.local for staging deployment

# Database (Staging - Use PostgreSQL or MySQL for staging)
DATABASE_URL="postgresql://user:password@staging-db.example.com:5432/disaster_recovery_staging"

# Supabase (Staging)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_staging_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_staging_supabase_service_role_key

# NextAuth
NEXTAUTH_URL=https://staging.disaster-recovery.vercel.app
NEXTAUTH_SECRET=generate-new-secret-for-staging-use-openssl-rand-base64-32

# Stripe (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_test_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key

# Email (Staging - Use test SMTP)
EMAIL_SERVER_HOST=smtp.mailtrap.io
EMAIL_SERVER_PORT=2525
EMAIL_SERVER_USER=your_mailtrap_user
EMAIL_SERVER_PASSWORD=your_mailtrap_password
EMAIL_FROM=staging@disaster-recovery.vercel.app

# Application
NEXT_PUBLIC_APP_URL=https://staging.disaster-recovery.vercel.app
NEXT_PUBLIC_APP_NAME="Disaster Recovery(Staging)"
NEXT_PUBLIC_SITE_URL="https://staging.disaster-recovery.vercel.app"
NODE_ENV=staging

# Analytics (Staging - Separate tracking)
NEXT_PUBLIC_GA_ID="G-STAGING123"
NEXT_PUBLIC_GTM_ID="GTM-STAGING"
NEXT_PUBLIC_FB_PIXEL_ID="STAGING_PIXEL_ID"
NEXT_PUBLIC_CLARITY_ID="staging_clarity"

# SEMrush API Configuration
SEMRUSH_API_KEY="staging_semrush_api_key"
SEMRUSH_API_UNITS_LIMIT="1000"
SEMRUSH_DATABASE="au"

# Lead Management (Staging Prices)
LEAD_PRICE="550"
LEAD_PRICE_PREMIUM="750"
LEAD_PRICE_REGIONAL="450"

# Service Settings
MINIMUM_CALLOUT_FEE="2200"
AFTER_HOURS_SURCHARGE="500"
WEEKEND_SURCHARGE="750"
PUBLIC_HOLIDAY_SURCHARGE="1000"

# Encryption (Generate new for staging)
ENCRYPTION_KEY="generate-32-char-key-for-staging-environment"

# Clean Claims API (Staging/Sandbox)
CLEAN_CLAIMS_API_URL="https://api-sandbox.cleanclaims.com.au/v1"
CLEAN_CLAIMS_API_KEY="staging_clean_claims_api_key"
CLEAN_CLAIMS_WEBHOOK_SECRET="staging_webhook_secret"

# Contractor Settings
CONTRACTOR_ONBOARDING_FEE="1500"
CONTRACTOR_BOND_AMOUNT="5000"
CONTRACTOR_SUBSCRIPTION_BASE="750"

# Background Check Provider (Test Environment)
BACKGROUND_CHECK_PROVIDER="Australian Police Check Test"
BACKGROUND_CHECK_API_KEY="staging_background_check_api_key"

# ABN Lookup API (Test)
ABN_LOOKUP_GUID="staging_abn_lookup_guid"

# Google Maps API (Staging)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="staging_google_maps_api_key"

# SMS Provider (Test Credentials)
SMS_PROVIDER="Twilio"
TWILIO_ACCOUNT_SID="staging_twilio_account_sid"
TWILIO_AUTH_TOKEN="staging_twilio_auth_token"
TWILIO_PHONE_NUMBER="+61TESTPHONE"

# Feature Flags (Staging)
ENABLE_CONTRACTOR_PORTAL=true
ENABLE_CLEAN_CLAIMS_SYNC=true
ENABLE_BACKGROUND_CHECKS=false
ENABLE_SMS_2FA=false
ENABLE_PAYMENT_PROCESSING=false

# Debug Settings (Staging)
DEBUG_MODE=true
LOG_LEVEL=debug
ERROR_REPORTING=verbose