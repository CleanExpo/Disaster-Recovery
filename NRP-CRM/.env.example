# ============================================
# NRP CRM Environment Variables
# ============================================

# Environment
NODE_ENV=development
APP_NAME=NRP-CRM
APP_URL=http://localhost
API_URL=http://localhost/api
WS_URL=ws://localhost/ws

# ============================================
# Database Configuration
# ============================================

# PostgreSQL
POSTGRES_USER=nrp_admin
POSTGRES_PASSWORD=NRP2024SecurePass!
POSTGRES_DB=nrp_crm
POSTGRES_HOST=postgres-crm
POSTGRES_PORT=5432

# MongoDB
MONGO_USER=nrp_mongo
MONGO_PASSWORD=NRP2024MongoPass!
MONGO_DB=nrp_documents
MONGO_HOST=mongo-docs
MONGO_PORT=27017

# Redis
REDIS_PASSWORD=NRP2024RedisPass!
REDIS_HOST=redis-cache
REDIS_PORT=6379

# TimescaleDB
TIMESCALE_USER=nrp_analytics
TIMESCALE_PASSWORD=NRP2024TimePass!
TIMESCALE_DB=nrp_analytics
TIMESCALE_HOST=timescale-analytics
TIMESCALE_PORT=5432

# ============================================
# Authentication & Security
# ============================================

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Session
SESSION_SECRET=your-session-secret-change-this-in-production

# ============================================
# Third-Party Services
# ============================================

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+61400000000

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@nrp.com.au
SENDGRID_FROM_NAME=National Restoration Professionals

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-2
AWS_S3_BUCKET=nrp-documents
AWS_S3_BACKUP_BUCKET=nrp-backups

# ============================================
# Insurance APIs
# ============================================

# IAG
IAG_API_KEY=your-iag-api-key
IAG_API_URL=https://api.iag.com.au
IAG_CLIENT_ID=your-iag-client-id
IAG_CLIENT_SECRET=your-iag-client-secret

# Suncorp
SUNCORP_API_KEY=your-suncorp-api-key
SUNCORP_API_URL=https://api.suncorp.com.au
SUNCORP_CLIENT_ID=your-suncorp-client-id
SUNCORP_CLIENT_SECRET=your-suncorp-client-secret

# Allianz
ALLIANZ_API_KEY=your-allianz-api-key
ALLIANZ_API_URL=https://api.allianz.com.au
ALLIANZ_CLIENT_ID=your-allianz-client-id
ALLIANZ_CLIENT_SECRET=your-allianz-client-secret

# QBE
QBE_API_KEY=your-qbe-api-key
QBE_API_URL=https://api.qbe.com.au
QBE_CLIENT_ID=your-qbe-client-id
QBE_CLIENT_SECRET=your-qbe-client-secret

# ============================================
# AI Services
# ============================================

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-org-id

# Claude (Anthropic)
CLAUDE_API_KEY=your-claude-api-key

# ============================================
# Accounting Integration
# ============================================

# Xero
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_REDIRECT_URI=http://localhost:4005/callback/xero

# ============================================
# Message Queue
# ============================================

# RabbitMQ
RABBITMQ_USER=nrp_rabbit
RABBITMQ_PASSWORD=NRP2024RabbitPass!
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ============================================
# Monitoring
# ============================================

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=NRP2024Grafana!

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# ============================================
# Rate Limiting
# ============================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Backup Configuration
# ============================================

BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============================================
# Google Services
# ============================================

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ============================================
# Feature Flags
# ============================================

ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_WEBSOCKET=true
ENABLE_CACHE=true
ENABLE_MONITORING=true
ENABLE_BACKUP=true

# ============================================
# Development Settings
# ============================================

DEBUG=false
LOG_LEVEL=info
LOG_FORMAT=json
PRETTY_LOGS=false

# ============================================
# Microservice Ports
# ============================================

CRM_CORE_PORT=4001
LEAD_DISTRIBUTION_PORT=4002
JOB_TRACKING_PORT=4003
INSURANCE_INTEGRATION_PORT=4004
FINANCIAL_TRACKING_PORT=4005
DOCUMENT_MANAGEMENT_PORT=4006
SEO_BOT_PORT=4007
INTEGRATION_HUB_PORT=4008

# ============================================
# Frontend Configuration
# ============================================

NEXT_PUBLIC_API_URL=http://localhost/api
NEXT_PUBLIC_WS_URL=ws://localhost/ws
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your-google-maps-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn