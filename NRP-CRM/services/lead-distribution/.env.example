# Server Configuration
PORT=3003
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nrp-leads

# Redis Configuration (optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+61400000000
TWILIO_WEBHOOK_URL=https://your-domain.com/webhooks

# SendGrid Configuration (Email)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@disasterrecovery.com.au
SENDGRID_FROM_NAME=NRP Disaster Recovery
SENDGRID_REPLY_TO_EMAIL=support@disasterrecovery.com.au

# Notification Service Configuration
ENABLE_SMS=true
ENABLE_EMAIL=true
SMS_RATE_LIMIT_PER_MINUTE=10
EMAIL_RATE_LIMIT_PER_MINUTE=30
SMS_RATE_LIMIT_PER_HOUR=200
EMAIL_RATE_LIMIT_PER_HOUR=500

# Lead Distribution Configuration
MAX_CONTRACTORS_PER_LEAD=5
DISTRIBUTION_METHOD=tier-based
LEAD_EXPIRATION_MINUTES=60
AUTO_RETRY_ON_DECLINE=true
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MINUTES=15

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://disaster-recovery.vercel.app

# External Service URLs
CONTRACTOR_PORTAL_URL=https://contractors.disasterrecovery.com.au
WEBHOOK_BASE_URL=https://api.disasterrecovery.com.au/lead-distribution

# Security Configuration
JWT_SECRET=your-jwt-secret-key
API_KEY=your-api-key-for-internal-services

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_ROUTES=false

# Performance Configuration
MAX_REQUEST_SIZE=10mb
CONNECTION_TIMEOUT=30000
SOCKET_TIMEOUT=45000

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_url
DATADOG_API_KEY=your_datadog_api_key

# Development/Testing
MOCK_CONTRACTORS=true
MOCK_NOTIFICATIONS=false
TEST_PHONE_NUMBER=+61400000000
TEST_EMAIL_ADDRESS=test@example.com