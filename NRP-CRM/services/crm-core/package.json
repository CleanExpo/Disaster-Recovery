{
  "name": "@nrp-crm/core",
  "version": "1.0.0",
  "description": "NRP CRM Core Microservice - Contractor management and territory operations",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
