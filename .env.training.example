# Training Module Release Configuration
# Copy this file to .env.local and adjust settings

# Training Release Mode Options:
# - 'all': All modules available (development/testing)
# - 'week1': Only Week 1 modules (Days 1-7) available
# - 'gradual': Use configuration in moduleConfig.ts
# - 'beta': Week 1 + modules marked as beta
NEXT_PUBLIC_TRAINING_RELEASE_MODE=gradual

# Feature Flags for Training System
NEXT_PUBLIC_ENABLE_TRAINING=true
NEXT_PUBLIC_ENABLE_ASSESSMENTS=true
NEXT_PUBLIC_ENABLE_CERTIFICATES=false

# Module Release Schedule (ISO dates)
NEXT_PUBLIC_MODULE_RELEASE_START_DATE=2024-01-01
NEXT_PUBLIC_MODULE_RELEASE_INTERVAL_DAYS=1

# Access Control
NEXT_PUBLIC_REQUIRE_PREREQUISITES=true
NEXT_PUBLIC_ALLOW_MODULE_SKIP=false

# Beta Testing
NEXT_PUBLIC_BETA_TESTER_EMAILS=admin@nrp.com.au,trainer@nrp.com.au
NEXT_PUBLIC_SHOW_BETA_FEATURES=false